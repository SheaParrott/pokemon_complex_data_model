<p id="notice"><%= notice %></p>

<h1>pokemon</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>National dex number</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemon.each do |pokemon| %>
      <tr>
        <td><%= pokemon.name %></td>
        <td><%= pokemon.national_dex_number %></td>
        <td><%= pokemon.region.region %></td>
        <td><%= link_to 'Show', [:admin, pokemon] %></td>
        <td><%= link_to 'Edit', [:edit, :admin, pokemon] %></td>
        <td><%= link_to 'Destroy', [:admin, pokemon], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

